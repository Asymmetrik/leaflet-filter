{
	"name": "@asymmetrik/leaflet-filter",
	"artifactName": "leaflet-filter",
	"moduleName": "leafletFilter",
	"description": "Extension of Leaflet.Draw that limits you to only drawing a single shape",
	"version": "1.4.0",
	"author": "Asymmetrik, Ltd.",
	"copyright": "Copyright Asymmetrik, Ltd. 2007-2019 - All Rights Reserved.",
	"license": "MIT",
	"scripts": {
		"build": "npm run bundle",
		"prebuild": "npm run lint",
		"bundle": "npm run bundle:styles && npm run bundle:code",
		"bundle:code": "npm run build:rollup && npm run build:uglify",
		"bundle:styles": "npm run build:node-sass && ncp ./src/sass/fonts ./dist/fonts",
		"lint": "npm run lint:eslint && npm run lint:stylelint",
		"lint:eslint": "eslint 'src/**/*.js'",
		"lint:stylelint": "stylelint './src/**/*.scss'",
		"build:node-sass": "node-sass --source-map true --output-style compressed src/index.scss dist/leaflet-filter.css",
		"build:rollup": "rollup -c rollup.config.js",
		"build:uglify": "uglifyjs --comments 'license' -o ./dist/leaflet-filter.min.js -- ./dist/leaflet-filter.js",
		"watch": " watch 'npm run build' ./src"
	},
	"main": "dist/leaflet-filter.js",
	"module": "index.js",
	"typings": "index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/Asymmetrik/leaflet-filter.git"
	},
	"peerDependencies": {
		"leaflet": "1",
		"leaflet-draw": "1",
		"font-awesome": "4"
	},
	"devDependencies": {
		"@types/leaflet": "1.4",
		"@types/leaflet-draw": "0.4",
		"eslint": "5",
		"font-awesome": "4",
		"leaflet": "1.4",
		"leaflet-draw": "1",
		"ncp": "2",
		"node-sass": "4",
		"rollup": "1",
		"stylelint": "9",
		"stylelint-config-recommended-scss": "3",
		"stylelint-scss": "3",
		"uglify-js": "3",
		"watch": "1"
	}
}
